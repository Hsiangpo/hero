{
  "name": "hero-idle-game-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Hero Idle Game",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:hero": "jest tests/hero-management.test.ts",
    "test:formation": "jest tests/formation-system.test.ts",
    "test:skills": "jest tests/skill-combination.test.ts",
    "test:saltfield": "jest tests/salt-field-pvp.test.ts",
    "test:saltjar": "jest tests/salt-jar-pvp.test.ts",
    "test:security": "jest tests/security-anti-cheat.test.ts",
    "test:performance": "jest tests/performance-concurrent.test.ts",
    "test:unit": "jest --testPathPattern='(hero-management|formation-system|skill-combination)'",
    "test:integration": "jest --testPathPattern='(salt-field-pvp|salt-jar-pvp)'",
    "test:security": "jest --testPathPattern='security-anti-cheat'",
    "test:load": "jest --testPathPattern='performance-concurrent' --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/testing/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testTimeout": 30000,
    "maxWorkers": "50%"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}